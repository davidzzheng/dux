{
  "name": "dux",
  "version": "1.0.0",
  "author": "David Zheng <hello@davidzheng.me>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "commit": "cz",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.32.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.4.1",
    "turbo": "^1.0.28"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
