generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  metadata    Json
  content     Content @relation(fields: [contentName], references: [name])
  pubkey      String  @unique @id
  contentName String
}

model Content {
  name                    String      @unique
  symbol                  String?
  description             String?
  seller_fee_basis_points Int
  image                   String
  animation_url           String?
  external_url            String
  update_authority        String
  attributes              Attribute[]
  collection              Json
  properties              Json
  Token                   Token[]
}

model Attribute {
  trait_type  String
  value       String
  contentName String
  content     Content @relation(fields: [contentName], references: [name])

  @@id([contentName, trait_type, value])
}
